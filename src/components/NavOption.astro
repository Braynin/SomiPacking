---
const { label } = Astro.props;
const pathname: string = Astro.url.pathname;

// Genera din√°micamente el path basado en el label
const path =
  label === "Inicio"
    ? "/"
    : label === "Contacto"
      ? "/contacto"
      : `/${label.replace(/\s+/g, "-")}`;

// Aplica clases activas si el pathname es "/" (inicio) o coincide con el path generado
const isActive =
  pathname.toLowerCase() === path.toLowerCase() ||
  (label === "Inicio" && pathname === "/");
---

<a
  class={`font-bold py-4 text-black text-2xl  hover:text-verdeOscuro   ${
    isActive ? "border-b-2 border-verdeOscuro" : ""
  }`}
  href={path}
>
  {label}
</a>
