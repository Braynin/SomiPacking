---
import FormularioContacto from "./formularioContacto.astro";
import DatosContacto from "./datosContacto.astro";


---
<main class="w-full flex flex-col items-center bg-white">
  <section class="w-full h-auto relative celular:h-full">
    <div class="w-full h-auto relative">
      <video
        autoplay
        loop
        muted
        class="w-full h-auto object-cover min-[480px]:min-h-0 pt-20"
      >
        <source src="/public/Contacto-video.mp4" type="video/mp4" />
        Tu navegador no soporta videos.
      </video>
      <div
        class="absolute top-1/3 right-40 w-1/4 shadow-lg min-[480px]:w-3/4 min-[480px]:right-10 celular:hidden min-[480px]:block"
      >
        <FormularioContacto />
      </div>
    </div>
  </section>

  <div class="w-full flex flex-col items-center justify-center mt-5 celular:mt-2">
    <h1 class="text-4xl mt-10 celular:text-lg text-center font-bold items-center">
      Â¡ESTAMOS LISTOS PARA COMENZAR TU PROYECTO!
    </h1>
  </div>

  <div class="w-full">
    <DatosContacto />
  </div>

  <div class="w-full h-[400px] flex justify-center my-5  celular:mb-10 celular:h-[300px]">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d723.8028359824224!2d-77.05433779996709!3d-12.041593688810364!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105cf2ad1e59731%3A0x272fe619dcf16711!2sJir%C3%B3n%20Antonio%20de%20Elizalde%20520%2C%20Lima%2015079!5e0!3m2!1ses!2spe!4v1740796134725!5m2!1ses!2spe"
      class="w-full h-96 sm:w-1/2 sm:h-full"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
  </div>

  <div class="w-full h-auto flex flex-col justify-center items-center celular:mt-10 p-6">
    <h1 class="text-4xl celular:text-lg font-bold mb-5   ">CONECTATE CON NOSOTROS</h1>
    <div class="flex flex-row gap-10">
      <div class="w-12 h-12">
        <a href="#" class="block w-full h-full">
          <svg
            class="w-full h-full"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M21 7.917v4.034a9.948 9.948 0 0 1 -5 -1.951v4.5a6.5 6.5 0 1 1 -8 -6.326v4.326a2.5 2.5 0 1 0 4 2v-11.5h4.083a6.005 6.005 0 0 0 4.917 4.917z"
            ></path>
          </svg>
        </a>
      </div>
      <div class="w-12 h-12">
        <a href="https://www.instagram.com/owlyxteam/" class="block w-full h-full">
          <svg
            class="w-full h-full"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M4 8a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"
            ></path>
            <path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path>
            <path d="M16.5 7.5v.01"></path>
          </svg>
        </a>
      </div>
      <div class="w-12 h-12">
        <a href="#" class="block w-full h-full">
          <svg
            class="w-full h-full"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</main>
