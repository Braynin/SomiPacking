<style>
  .cuadrado-container {
    display: flex;
    gap: 20px;
    padding: 30px;
  }

  .cuadrado {
    width: 400px;
    height: 400px;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 18px;
    color: white;
    border-radius: 10px;
    overflow: hidden;
    transition:
      box-shadow 0.3s ease,
      filter 0.3s ease; /* Transición para la sombra y filtro */
    background-color: burlywood;
    position: relative; /* Asegura que el overlay se posicione sobre la imagen */
  }

  /* Cuadrado 1 */
  .cuadrado-1 {
    background-image: url("/ruta/a/tu/imagen1.jpg"); /* Imagen específica para el primer cuadro */
    background-size: cover;
    background-position: center;
    position: relative;
    transition: filter 0.3s ease; /* Transición suave para el filtro */
  }

  /* Cuadrado 2 */
  .cuadrado-2 {
    background-image: url("/ruta/a/tu/imagen2.jpg"); /* Imagen específica para el segundo cuadro */
    background-size: cover;
    background-position: center;
    position: relative;
    transition: filter 0.3s ease; /* Transición suave para el filtro */
  }

  /* Cuadrado 3 */
  .cuadrado-3 {
    background-image: url("/ruta/a/tu/imagen3.jpg"); /* Imagen específica para el tercer cuadro */
    background-size: cover;
    background-position: center;
    position: relative;
    transition: filter 0.3s ease; /* Transición suave para el filtro */
  }

  /* Crear un overlay de color para el efecto, solo aparece en el hover */
  .cuadrado::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: transparent; /* Inicia transparente */
    transition: background 0.3s ease; /* Suave transición para el gradiente */
    z-index: 2; /* Asegura que el overlay esté por encima de la imagen pero debajo del texto */
    pointer-events: none; /* Para que no interfiera con la interacción del usuario */
  }

  /* Efecto hover: se aplica el color y gradiente en el overlay */
  .cuadrado:hover {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3); /* Sombra sutil alrededor del cuadro */
  }

  /* Solo en hover, aplicar el gradiente */
  .cuadrado:hover::after {
    background: linear-gradient(
      to top,
      rgba(231, 76, 60, 0.7),
      rgba(0, 0, 0, 0)
    ); /* Oscurecimiento desde abajo con color propio */
  }

  .cuadrado:hover .cuadrado-1,
  .cuadrado:hover .cuadrado-2,
  .cuadrado:hover .cuadrado-3 {
    filter: brightness(0.8); /* Oscurecer la imagen con un filtro de brillo */
  }

  .texto-default,
  .texto-hover {
    position: absolute;
    transition: opacity 0.3s ease;
    z-index: 3; /* El texto siempre debe estar por encima de la imagen y el overlay */
  }

  .texto-default {
    opacity: 1;
  }

  .texto-hover {
    opacity: 0;
  }

  .cuadrado:hover .texto-default {
    opacity: 0;
  }

  .cuadrado:hover .texto-hover {
    opacity: 1;
  }
</style>
