---
import SocialIcons from "./SocialIcons.astro";
import FooterSection from "./FooterSection.astro";
---
<footer class="w-fullh-full celular:px-20 tablet:px-10 py-10 escritorio:px-40 escritorio:text-center text-white bg-black">
  <div class="max-w-screen-2xl mx-auto flex celular:justify-around">
    <img src="/Somi-Logo-White.webp" alt="Somi Logo" class="w-32 -ml-3" />
  </div>
  <div class="celular:flex-col celular:items-center max-w-screen-2xl mx-auto flex justify-between flex-wrap">
    <!-- Sección EMPRESA -->
    <FooterSection header="EMPRESA" class="text-lg font-semibold tracking-wide">
      <a class="mb-2 text-base text-gray-300 hover:text-white" href="/#Nosotros">Nosotros</a>
      <a class="mb-2 text-base text-gray-300 hover:text-white" href="/Packaging">Packaging</a>
      <a class="mb-2 text-base text-gray-300 hover:text-white" href="/Imprenta">Imprenta</a>
      <a class="mb-2 text-base text-gray-300 hover:text-white" href="/Contacto">Contacto</a>
    </FooterSection>

    <!-- Sección SOMI PACKAGING -->
    <FooterSection header="SOMI PACKAGING" class="text-lg font-semibold tracking-wide">
      <div class="celular:text-center">
        <h3 class="text-base font-medium text-white mb-2">MMSG SERVICIOS GENERALES SRL</h3>
        <p class="text-sm text-gray-300 mb-1"><span class="font-bold">Ruc:</span>20605189068</p>
        <p class="text-sm text-gray-300 mb-1">
          <span class="font-bold">Dirección:</span> Jr. Antonio de Elizalde 520, Cercado de Lima
        </p>
        <p class="text-sm text-gray-300">
          <span class="font-bold">Horario:</span> Lunes a viernes de 9 a. m. a 6 p. m. y sábado de 9 a. m. a 1 p. m
        </p>
      </div>
    </FooterSection>

    <!-- Sección CONTACTO -->
    <FooterSection header="CONTACTO" class="text-lg font-semibold tracking-wide">
      <div class="flex items-center space-x-3 mb-2">
