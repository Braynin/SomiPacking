---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---

<!doctype html>
<html class="font-sans" lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Exo:ital,wght@0,100..900;1,100..900&family=Gabarito:wght@400..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="icon"
      href="/icono-Somi-Logo.webp"
      type="image/webp"
      sizes="any"
    />
    <title>{title}</title>
  </head>
  <body class="bg-verdeClaro exo-font">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
